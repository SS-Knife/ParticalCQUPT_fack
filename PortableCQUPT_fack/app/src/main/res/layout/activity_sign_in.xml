<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.portablecqupt_fack.SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <ImageView
        android:id="@+id/image_blue"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/signinbackground">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="74dp"
        android:id="@+id/imageView3"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        app:srcCompat="@color/darkgrey"
        android:id="@+id/imageView5"
        android:layout_marginTop="229dp" />

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@color/white"
        android:id="@+id/imageView4"
        android:layout_marginTop="230dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:text="登陆"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="请输入用户名"
        android:layout_marginLeft="85dp"
        android:textColor="@color/darkgrey"
        android:background="@null"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/imageView2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:hint="请输入密码"
        android:background="@null"
        android:textColor="@color/darkgrey"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginLeft="85dp"
        android:layout_below="@+id/editText"
        />
    <ImageView
    android:layout_width="match_parent"
    android:background="@color/darkgrey"
    android:layout_height="2dp"
    android:layout_marginTop="290dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/darkgrey"
        android:layout_height="2dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_login_account"
        android:layout_marginTop="258dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_login_password"
        android:layout_marginTop="302dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/imageView7" />

    <Button
        android:text="登   陆"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/signinbackground"
        android:id="@+id/button3"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="还没有账号？"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        android:layout_below="@+id/imageView4" />

    <TextView
        android:text="注册"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/imageView4" />



</RelativeLayout>
